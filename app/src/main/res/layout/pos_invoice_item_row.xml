<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RR"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Methdes.MyTextView
                    android:id="@+id/tv_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="no"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Methdes.MyTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="TextView"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="6">

                <Methdes.MyTextView
                    android:id="@+id/tv_Price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:text="TextView"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Methdes.MyTextView
                    android:id="@+id/tv_Qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Qty"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Methdes.MyTextView
                    android:id="@+id/tv_Unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Unit"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Methdes.MyTextView
                    android:id="@+id/tv_Tax_Amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Tax_Amt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Methdes.MyTextView
                    android:id="@+id/tv_Disc_Amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Disc_Amt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Methdes.MyTextView
                    android:id="@+id/tv_Total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:digits="#.000"
                    android:gravity="center_horizontal"
                    android:text="Total"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/btn_cir_white_fill_black"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:onClick="btn_Delete_Item"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/editeqty" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:orientation="horizontal"></LinearLayout>


    <Methdes.MyTextView
        android:id="@+id/tv_tax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Tax"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:visibility="gone" />

    <Methdes.MyTextView
        android:id="@+id/tv_Bounce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Bounce"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />

    <Methdes.MyTextView
        android:id="@+id/tv_Disc_Per"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="perdisc"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>