
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/Mainlayout"
        android:orientation="vertical"
        android:layout_width="700dp"
        android:paddingEnd="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">


        <LinearLayout
            android:id="@+id/MainHeader"
            android:orientation="vertical"
            android:layout_width="600dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:id="@+id/img_Logo"
                    android:visibility="invisible"
                    android:src="@drawable/asw"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="مجموعة المجرة الدولية"
                    android:id="@+id/tv_CompName"
                    android:visibility="invisible"
                    android:gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="37dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="كشف حساب"
                    android:id="@+id/textView13"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="2dp"
                    style="bold"
                    android:textColor="#000"
                    android:textIsSelectable="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_marginTop="10dp"
                android:background="@color/Gray1"
                android:layout_height="30dp">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="من تاريخ   :"
                    android:id="@+id/tv_OrderNam"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/tv_fdate"
                    android:gravity="right"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                   />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="إلى تاريخ  :  "
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:id="@+id/textView187"
                    android:textColor="#000" />

                <TextView
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/tv_tdate"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/Gray1"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="  السيد  :"

                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/textView14"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/tv_cusname"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="15dp"

                    android:layout_weight="1.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="المحترم"
                    android:layout_weight="0.4"
                    android:id="@+id/textView15"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18dp"
                  />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Details"
            android:orientation="vertical"
            android:layout_width="600dp"
            android:layout_gravity="center"

            android:layout_height="match_parent"
