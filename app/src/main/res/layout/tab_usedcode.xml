<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- NOT SO IMPORTANT CUSTOM UI STUFF -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:weightSum="7"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="الرمز"
                android:id="@+id/textView218"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="0.8"
                android:layout_marginRight="1dp" />

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="اسم العميل"
                android:id="@+id/textView219"
                android:textColor="#fff"
                android:textAlignment="gravity"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="1.4"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView220"
                android:textColor="#fff"
                android:text="اسم المادة"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="1.4"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView221"
                android:textColor="#fff"
                android:text="رقم الفاتورة"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="0.9"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView222"
                android:textColor="#fff"
                android:text="التاريخ"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="0.9"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView223"
                android:textColor="#fff"
                android:text="الوقت"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="0.8"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />

            <Methdes.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView229"
                android:textColor="#fff"
                android:text="الحالة"
                android:gravity="center"
                android:background="@color/Black11"
                android:textSize="20dp"
                android:layout_weight="0.8"
                android:layout_marginLeft="1dp" />
        </LinearLayout>
    <LinearLayout
           android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">

            <ListView
                android:id="@+id/LstUsedCodes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />
        </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:weightSum="3"
            android:layout_height="50dp"
            android:background="@color/Gray5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Methdes.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="العدد"
                    android:id="@+id/textView224"
                    android:gravity="center"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp">

                <Methdes.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView226"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_Summatin"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:visibility="invisible" />

                <Methdes.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="  مجموع القبض"
                    android:id="@+id/textView227"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</RelativeLayout>