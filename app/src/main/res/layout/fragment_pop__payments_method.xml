    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Methdes.MyTextView
                android:id="@+id/textView273"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@color/Blue"

                android:gravity="center"
                android:text="تاريخ الدفعات"
                android:textColor="#000" />
        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:background="@color/White"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Methdes.MyTextView
                    android:id="@+id/textView275"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:background="@color/Gray2"
                    android:gravity="center"
                    android:text="الدفعات"
                    android:textColor="#000"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/et_Amt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:ems="10"
                    android:hint=" الدفعة"
                    android:inputType="numberDecimal"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Methdes.MyTextView
                    android:id="@+id/textView276"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:background="@color/Gray2"
                    android:gravity="center"
                    android:text="الملاحظات"
                    android:textColor="#000"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/et_Note"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.80"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:inputType="text"
                    android:hint="ملاحظات" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_add_item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="اضافه دفعات"
                android:textColor="#fff"
                android:textSize="16dp"
                android:background="@color/blue123"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <Methdes.MyTextView
                        android:id="@+id/textView271"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Gray2"
                        android:gravity="center"
                        android:text="اليوم"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/plusday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Green"
                        android:text="+" />

                    <EditText
                        android:id="@+id/day2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:selectAllOnFocus="true" />
                    <Button
                        android:id="@+id/minday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/ColorPrimaryDark"
                        android:text="-" />




                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="4"
                    android:padding="3dp"

                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <Methdes.MyTextView
                        android:id="@+id/textView274"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Gray2"
                        android:gravity="center"
                        android:text="الشهر"
                        android:textColor="#000"
                        android:textSize="14sp" />


                    <Button
                        android:id="@+id/plusmonth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Green"
                        android:text="+" />
                    <EditText
                        android:id="@+id/month2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:selectAllOnFocus="true" />
                    <Button
                        android:id="@+id/minmonth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/ColorPrimaryDark"
                        android:text="-" />



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:padding="3dp"

                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <Methdes.MyTextView
                        android:id="@+id/textView272"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Gray2"
                        android:gravity="center"
                        android:text="السنة"
                        android:textColor="#000"
                        android:textSize="14sp" />


                    <Button
                        android:id="@+id/plusyear"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Green"
                        android:text="+" />

                    <EditText
                        android:id="@+id/year2"                    android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:selectAllOnFocus="true" />
                    <Button
                        android:id="@+id/minyear"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/ColorPrimaryDark"
                        android:text="-" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/Blue"
        android:gravity="right"
        android:weightSum="4"
        android:orientation="horizontal">

        <Methdes.MyTextView
            android:id="@+id/textView140"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="المبلغ"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Methdes.MyTextView
            android:id="@+id/textView141"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="تاريخ القبض"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Methdes.MyTextView
            android:id="@+id/textView142"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.50"
            android:gravity="center_vertical"
            android:text="ملاحظات"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="16sp" />
        <Methdes.MyTextView
            android:id="@+id/textView143"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:gravity="center_vertical"
            android:text="#"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lstpayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/btn_cir_white_fill_black"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اعتماد الدفعات"
                android:textColor="@color/White"
                android:layout_margin="2dp"
                android:textSize="20dp"
                android:background="@color/Blue"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/btn_cir_white_fill_black"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رجوع"
                android:textColor="@color/White"

                android:textSize="20dp"
                android:layout_margin="2dp"
                android:background="@color/Blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>