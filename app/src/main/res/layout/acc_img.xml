
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/Mainlayout"
        android:orientation="vertical"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/MainHeader"
        android:orientation="vertical"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="270dp"
                android:layout_height="100dp"
                android:id="@+id/img_Logo"
                android:src="@mipmap/diomnlogo"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="مجموعة المجرة الدولية"
                android:id="@+id/tv_CompName"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="كشف حساب"
                android:id="@+id/textView13"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="#000"
                android:textIsSelectable="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="من تاريخ   :"
                android:id="@+id/tv_OrderNam"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_fdate"
                android:gravity="right"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="إلى تاريخ  :  "
                android:id="@+id/textView187"
                android:textColor="#000" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_tdate"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="  السيد  :"
                android:id="@+id/textView14"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_cusname"
                android:gravity="right"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="        المحترم"
                android:id="@+id/textView15"
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Details"
        android:orientation="vertical"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">

     <LinearLayout
            android:id="@+id/Sal_ItemSLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--   <ListView
                   android:layout_width="fill_parent"
                   android:layout_height="520dp"
                   android:id="@+id/listView" />-->
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/Details2"
            android:orientation="vertical"
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF">

            <LinearLayout
                android:id="@+id/Sal_ItemSLayout2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--   <ListView
                       android:layout_width="fill_parent"
                       android:layout_height="520dp"
                       android:id="@+id/listView" />-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Details3"
            android:orientation="vertical"
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF">

            <LinearLayout
                android:id="@+id/Sal_ItemSLayout3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--   <ListView
                       android:layout_width="fill_parent"
                       android:layout_height="520dp"
                       android:id="@+id/listView" />-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Details4"
            android:orientation="vertical"
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF">

            <LinearLayout
                android:id="@+id/Sal_ItemSLayout4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--   <ListView
                       android:layout_width="fill_parent"
                       android:layout_height="520dp"
                       android:id="@+id/listView" />-->
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/MainDetails"
        android:orientation="vertical"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_Total"
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="التوقيع والختم"
                        android:id="@+id/textView128"
                        android:textColor="#000"
                        android:layout_marginBottom="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="__________________________________________________________"
                    android:id="@+id/textView108"
                    android:gravity="center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/tv_footer"
                    android:gravity="center"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/tv_footer1"
                    android:gravity="center"
                    android:textColor="#000" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</ScrollView>