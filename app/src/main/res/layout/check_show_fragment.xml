<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#000" android:orientation="horizontal"
        android:weightSum="4">
        <!-- android:background="@drawable/blue_fill_white"-->



        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="رقم العميل"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="رقم الشيك"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تاريخ الشيك"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="المبلغ"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>



    <ListView
        android:id="@+id/checklist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="4">
        <!-- android:background="@drawable/blue_fill_white"-->


        <Button
            android:id="@+id/back"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:text="رجوع"
            android:background="#000"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </Button>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="المجموع :"
                    android:textColor="#000"
                    android:layout_marginBottom="3dp"
                    android:gravity="left"
                    android:textSize="22dp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="الرصيد :"
                    android:textColor="#000"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center"
                    android:textSize="22dp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:weightSum="2"
                >

                <TextView

                    android:id="@+id/sumcheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"
                    android:textSize="22dp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/sumcheck1"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>



</LinearLayout>