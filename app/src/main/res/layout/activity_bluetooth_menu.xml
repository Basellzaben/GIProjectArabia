<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- Divide | EditText | Button | -->
        <EditText
            android:id="@+id/EditTextAddressBT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />

        <Button
            android:id="@+id/ButtonConnectBT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="اتصال" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/ButtonSearchBT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="البحث عن الطابعة" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/ListView01"
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServerIP"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textIsSelectable="false"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_IP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Methdes.MyTextView
            android:id="@+id/textView131"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="بداية تسلسل الفواتير"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_Sal_inv"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_cir_white_fill_black"
            android:inputType="number"
            android:maxLength="7" />

        <TextView
            android:id="@+id/textView155"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Methdes.MyTextView
            android:id="@+id/textView156"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="بداية تسلسل طلبات البيع"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <Methdes.MyTextView
            android:id="@+id/et_SalesOrder"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:ems="10"
            android:inputType="number"
            android:maxLength="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Methdes.MyTextView
            android:id="@+id/textView137"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="بداية تسلسل سندات القبض"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_Payments"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:inputType="number"
            android:maxLength="7" />

        <TextView
            android:id="@+id/textView157"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Methdes.MyTextView
            android:id="@+id/textView158"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="بداية تسلسل العملاء النقديين"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_CustCash"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:ems="10"
            android:inputType="number"
            android:maxLength="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Methdes.MyTextView
            android:id="@+id/textView148"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="بداية تسلسل طلب تجهيز مواد"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_PrepQty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:inputType="number"
            android:maxLength="7" />

        <TextView
            android:id="@+id/textView159"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Methdes.MyTextView
            android:id="@+id/textView160"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="بداية تسلسل  ارجاع المواد"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_ReturnQty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:ems="10"
            android:inputType="number"
            android:maxLength="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <Methdes.MyTextView
            android:id="@+id/textView168"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="نوع الطابعة"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/sp_Print_Type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp" />

        <TextView
            android:id="@+id/textView170"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Methdes.MyTextView
            android:id="@+id/textView169"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="نوع  الجهاز التابلت"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/sp_MobileType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button25"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:onClick="btn_Save"
            android:text="حــــفـــظ" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Delete"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:onClick="DeleteAll"
            android:text="مسح كل البيانات" />
    </LinearLayout>

</LinearLayout>