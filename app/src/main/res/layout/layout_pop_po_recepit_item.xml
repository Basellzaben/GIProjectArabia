<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/et_Search_filter"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_cir_white_fill_black"
                android:hint="ادخل رقم المادة هنا للبحث"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_ItemNm"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/btn_cir_white_fill_black"
                android:gravity="center"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f5d77272"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Methdes.MyTextView
                        android:id="@+id/textView122"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=" كمية الباتش      :"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tv_StoreQty"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Methdes.MyTextView
                        android:id="@+id/textView123"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="النسبة :"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tv_qty_perc"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/textView132"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="%"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Methdes.MyTextView
                        android:id="@+id/textView238"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="كمية المستودع  :" />

                    <TextView
                        android:id="@+id/tv_AllStoreQty"
                        android:layout_width="90dp"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <view
                            android:id="@+id/view13"
                            class="Methdes.MyTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="الباتش" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <view
                            android:id="@+id/tv_Batch"
                            class="Methdes.MyTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <view
                            android:id="@+id/view12"
                            class="Methdes.MyTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="تاريخ الصلاحية" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <view
                            android:id="@+id/tv_ExpDate"
                            class="Methdes.MyTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/sp_item_cat"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:spinnerMode="dropdown"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Methdes.MyTextView

                android:id="@+id/texftView40"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="fill_vertical|center"
                android:text="المستودع"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sp_Store"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_cir_white_fill_black"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ItemCat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:orientation="vertical"
                android:visibility="visible">


                <ListView
                    android:id="@+id/lstCat"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listView2"
                    style="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/ColorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ss"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:isScrollContainer="true"
                android:orientation="horizontal"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:isScrollContainer="true"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/textView22"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="السعر"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_price"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/textView23"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="الكمية"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_qty"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_Inc"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/increment"
                                    android:textSize="30sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_Dec"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/decrement"
                                    android:textSize="30sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Methdes.MyTextView

                            android:id="@+id/textView40"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:gravity="fill_vertical|center"
                            android:text="الوحدة"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/sp_units"
                            android:layout_width="130dp"
                            android:layout_height="50dp"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Methdes.MyTextView
                            android:id="@+id/textView24"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="الضريبة"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_tax"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:ems="10"
                            android:enabled="false"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/BounceLyt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/textView26"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="البونص"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_bo"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0"
                            android:textAlignment="center" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/DiscountLyt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Methdes.MyTextView
                            android:id="@+id/textView25"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="خصم طلب الشراء "
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_Discount"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:editable="false"
                            android:ems="10"

                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_totl"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:focusable="false"
                            android:gravity="center_horizontal|center"
                            android:inputType="phone"
                            android:numeric="decimal"
                            android:text="0.000"
                            android:textColor="#fc0101"
                            android:textSize="40sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_disc_per"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:text="0"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:transitionGroup="false"
                        android:visibility="invisible">

                        <Methdes.MyTextView
                            android:id="@+id/textView76"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="قيمة الخصم"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <EditText
                            android:id="@+id/et_dis_Amt"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:text="0"
                            android:textColor="#000"
                            android:visibility="visible" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/tv_Counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TextView" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="العروض"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ListView
                        android:id="@+id/lst_Bill_Info"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/radDisc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/rad_Amt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="مبلغ" />

                                <RadioButton
                                    android:id="@+id/rad_Per"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:nestedScrollingEnabled="true"
                                    android:text="نسبة" />

                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/btn_OpenCal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/calcult" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_add_item"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@color/Pink"
                        android:onClick="ggg"
                        android:text="إضــــافــــة"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_cancel_item"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_light"
                        android:text=" رجــــــــــــــوع"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ItemImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/no_image" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
