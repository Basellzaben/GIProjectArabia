<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/R_Back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    tools:context=".PopAddCheck2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="vertical"

        android:weightSum="4.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50"
            android:background="@color/Blue"
            android:minHeight="179dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/Frag1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/CheckData"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000" />

                <Methdes.MyTextView
                    android:id="@+id/textView246"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="اضافة شيكات"
                    android:textColor="@color/White"
                    android:textSize="18sp" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"

            android:background="@color/Gray3"

            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="4">

            <Methdes.MyTextView
                android:id="@+id/textView255"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="مبلغ الشيكات:"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_CheckAmt"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_alignTop="@+id/textView255"
                android:layout_toStartOf="@+id/textView255"
                android:layout_weight="1"
                android:background="@drawable/btn_cir_white_fill_black"
                android:textColor="@color/White" />

            <Methdes.MyTextView
                android:id="@+id/textView257"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tv_CheckAmt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="عدد الشيكات :"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_Check_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/textView257"
                android:layout_alignParentStart="true"

                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cir_white_fill_black"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@color/White"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/textView273"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="تاريخ الشيك"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_fill_white"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/minday"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/ColorPrimaryDark"
                            android:text="-" />


                        <EditText
                            android:id="@+id/day2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:selectAllOnFocus="true" />

                        <Button
                            android:id="@+id/plusday"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Green"
                            android:text="+" />

                        <Methdes.MyTextView
                            android:id="@+id/textView271"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Gray2"
                            android:gravity="center"
                            android:text="اليوم"
                            android:textColor="#000"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_fill_white"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/minmonth"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/ColorPrimaryDark"
                            android:text="-" />


                        <EditText
                            android:id="@+id/month2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:selectAllOnFocus="true" />

                        <Button
                            android:id="@+id/plusmonth"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Green"
                            android:text="+" />

                        <Methdes.MyTextView
                            android:id="@+id/textView272"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Gray2"
                            android:gravity="center"
                            android:text="الشهر"
                            android:textColor="#000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_fill_white"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/minyear"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/ColorPrimaryDark"
                            android:text="-" />


                        <EditText
                            android:id="@+id/year2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="4"
                            android:selectAllOnFocus="true" />

                        <Button
                            android:id="@+id/plusyear"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Green"
                            android:text="+" />

                        <Methdes.MyTextView
                            android:id="@+id/textView269"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Gray2"
                            android:gravity="center"
                            android:text="السنة"
                            android:textColor="#000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="right"
                        android:minWidth="1dp"
                        android:minHeight="0dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/CheckNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:gravity="center"
                            android:inputType="number"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/textView259"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:gravity="right|center_vertical"
                            android:text="رقم الشيك"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="2">

                        <Spinner
                            android:id="@+id/sp_banks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:backgroundTint="#fff"
                            android:gravity="center_vertical"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="اسم البنك"
                            android:textColor="#000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ChekAmt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/tv_Amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="المبلغ"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/NameDrawer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:gravity="center"
                            android:inputType="text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/tv_Amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="أسم الساحب"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/Chekday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_cir_white_fill_black"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:text="50 يوم"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <Methdes.MyTextView
                            android:id="@+id/tv_allowday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="فترة السماح"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#000"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/btn_Back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/Pink"
                android:onClick="btn_back (ItemGalleryActivity)">

                <Methdes.MyTextView
                    android:id="@+id/textView266"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="رجـــوع"
                    android:textColor="@color/White"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_save_Check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@color/Blue"
                android:onClick="btn_save_po">

                <Methdes.MyTextView
                    android:id="@+id/textView267"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="حفظ"
                    android:textColor="@color/White"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

