<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RR"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:weightSum="10.5">

    <Methdes.MyTextView

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:background="@color/Gray1"
        android:textColor="@color/Black11"
        android:gravity="center"
        android:text="اسم المادة:"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />
    <Methdes.MyTextView
        android:id="@+id/B_ItemName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="2.5"
        android:gravity="center"

        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="13sp" />


    <Methdes.MyTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/Gray1"
        android:textColor="@color/Black11"
        android:text="الكمية:"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />

    <Methdes.MyTextView
        android:id="@+id/B_Qty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight=".7"
        android:gravity="center"
        android:text=" 10.000"
        android:textColor="@color/Black11"

        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="13sp" />

    <Methdes.MyTextView
        android:id="@+id/SR_Note"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:background="@color/Gray1"
        android:textColor="@color/Black11"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="البونص:"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="13sp" />
    <Methdes.MyTextView
        android:id="@+id/B_Buonas"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight=".7"
        android:textColor="@color/Black11"

        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />
    <Methdes.MyTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:text="السعر:"
        android:background="@color/Gray1"
        android:textColor="@color/Black11"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />
    <Methdes.MyTextView
        android:id="@+id/B_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight=".7"
        android:textColor="@color/Black11"

        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />
    <Methdes.MyTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:text="المجموع:"
        android:background="@color/Gray1"
        android:textColor="@color/Black11"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />

    <Methdes.MyTextView
        android:id="@+id/B_SUMC"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight=".9"
        android:textColor="@color/Black11"

        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />


</LinearLayout>