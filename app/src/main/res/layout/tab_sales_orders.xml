<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<!-- NOT SO IMPORTANT CUSTOM UI STUFF -->

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layoutDirection="locale"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="invisible">

        <Methdes.MyTextView
            android:id="@+id/textView209"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="0.85"
            android:background="@color/Black11"
            android:gravity="center"
            android:text="رقم الطلب"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:id="@+id/textView210"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.85"
            android:background="@color/Black11"
            android:gravity="center"
            android:text="رقم العميل"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:id="@+id/textView211"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1.75"
            android:background="@color/Black11"
            android:gravity="center"
            android:text="اسم العميل"
            android:textAlignment="gravity"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:id="@+id/textView213"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.85"
            android:background="@color/Black11"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="التاريخ"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:id="@+id/textView214"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.85"
            android:background="@color/Black11"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="الحالة"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:id="@+id/textView215"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.85"
            android:background="@color/Black11"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="الاجمالي"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">


        <ListView
                android:id="@+id/SalesSummery"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:weightSum="3"
            android:background="@color/Gray5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Summatin"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:text="11"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Methdes.MyTextView
                    android:id="@+id/textView207"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="المجموع"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView208"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Count"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:text="111"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Methdes.MyTextView
                    android:id="@+id/tv_lbl_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="عدد الطلبات"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>