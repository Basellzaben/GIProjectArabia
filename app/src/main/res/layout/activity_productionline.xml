<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2F4F4F"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layoutDirection="rtl"
            android:layout_margin="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="2" >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="أسم المستخدم :"
                    android:gravity="center"

                    android:layout_margin="1dp"
                    android:textColor="#000"
                    android:layout_height="match_parent"></TextView>
                <EditText
                    android:id="@+id/Man_Name"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
android:enabled="false"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent">
                </EditText>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/searchitem_no"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:visibility="gone"
                    android:onClick="searchitem_no"
                    android:src="@drawable/ic_search_black_24dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layoutDirection="rtl"

            android:layout_margin="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:weightSum="2" >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="المادة :"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:textColor="#000"
                    android:layout_height="match_parent"></TextView>
                <EditText
                    android:id="@+id/serch_item_name"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"

                    android:layout_margin="1dp"
                    android:layout_height="match_parent">
                </EditText>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/searchitem_name"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"

                    android:src="@drawable/ic_search_black_24dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"

                android:minHeight="100dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/tv_BarcodeValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:clickable="false"
                    android:cursorVisible="true"
                    android:editable="true"
                    android:gravity="center"
                    android:hint="باركود"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/tv_SearchValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:layout_weight="1"

                    android:background="@drawable/btn_cir_white_fill_black"



                    android:gravity="center"
                    android:hint="ابحث من هنا"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000" />




                <Button
                    android:id="@+id/button48"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/Blue"
                    android:onClick="btn_BarcodeReading"
                    android:text="باركود"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bبلutton48"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/ColorPrimary"
                    android:onClick="btn_Seach"
                    android:text="بحث يدوي"
                    android:textSize="16sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
            android:visibility="gone"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:weightSum="2" >
                    <TextView

                        android:layout_width="75dp"
                        android:layout_weight="0.5"
                        android:text="الباركود :"
                        android:gravity="center"
                        android:onClick="ScnBarCode"
                        android:textColor="#000"
                        android:layout_height="match_parent"></TextView>
                    <EditText

                        android:layout_width="75dp"
                        android:layout_weight="0.5"
                        android:id="@+id/barcod1"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="#fff"
                        android:layout_height="match_parent"></EditText>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2" >
                    <TextView

                        android:layout_width="75dp"
                        android:layout_weight="0.5"
                        android:text="رقم الحركة :"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"></TextView>
                    <EditText

                        android:layout_width="75dp"
                        android:layout_weight="0.5"
                        android:id="@+id/TransNo1"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="#fff"
                        android:layout_height="match_parent"></EditText>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2" >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="التاريخ :"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="match_parent"></TextView>
                    <EditText

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/date1"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="#fff"
                        android:layout_height="match_parent"></EditText>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:onClick="s"
                        android:src="@drawable/produce"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layoutDirection="rtl"
            android:visibility="gone"
            android:weightSum="1"
            android:orientation="horizontal"
            >





        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="قيد التجهيز"></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="تم التجهيز"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="2">
            <ListView
                android:layout_width="0dp"
                android:id="@+id/lv1"
                android:background="#fff"
                android:layout_height="match_parent"
                android:layout_weight="0.99"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"

                />
            <ListView
                android:layout_width="0dp"
                android:id="@+id/lv2"
                android:background="#fff"
                android:layout_height="match_parent"
                android:layout_weight="0.99"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/countndone"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:background="#fff"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="15"></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/countdone"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="10"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="15dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:weightSum="2"
                >
                <TextView

                    android:layout_width="0dp"
                    android:background="#a08222"
                    android:text="إعتماد"
                    android:onClick="Approval"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_height="match_parent"></TextView>
                <TextView

                    android:layout_width="0dp"
                    android:background="#a08222"
                    android:text="تحديث البيانات"
                    android:onClick="update"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_height="match_parent"></TextView>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>