<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_fill_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <Methdes.MyTextView
            android:id="@+id/textView172"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text=" كمية المستودع :"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ed_qty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:editable="false"
            android:gravity="center_horizontal"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_fill_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <Methdes.MyTextView
            android:id="@+id/textView173"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text=" الكمية الفعلية  :"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/et_Act_qty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/blue_fill_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <Methdes.MyTextView
            android:id="@+id/textView174"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="  الفرق   :"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ed_diff"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cir_white_fill_black"
            android:editable="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_fill_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مـــوافــــق" />
    </LinearLayout>

</LinearLayout>