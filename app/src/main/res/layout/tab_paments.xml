<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- NOT SO IMPORTANT CUSTOM UI STUFF -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="9">


            <Methdes.MyTextView
                android:id="@+id/textView217"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="رقم الطلب"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView218"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="رقم العميل"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView219"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="اسم العميل"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="20dp" />

                       <Methdes.MyTextView
                android:id="@+id/textView220"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="نوع القبض"
                android:textColor="#fff"
                android:textSize="20dp" />




            <Methdes.MyTextView
                android:id="@+id/textView221"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="النقدي"
                android:textColor="#fff"
                android:textSize="20dp" />


            <Methdes.MyTextView
                android:id="@+id/textView222"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="الشيكات"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="التاريخ"
                android:textColor="#fff"
                android:textSize="20dp" />


            <Methdes.MyTextView
                android:id="@+id/myTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="حالة القبض"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="20dp" />
            <Methdes.MyTextView
                android:id="@+id/f"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:text=" سند القبض"
                android:textColor="#fff"
                android:textSize="20dp" />
            <Methdes.MyTextView
                android:id="@+id/textView223"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="المجموع"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp">


        <ListView
            android:id="@+id/PaymentSummery"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.4" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:weightSum="3"
            android:background="@color/Gray5">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Methdes.MyTextView
                    android:id="@+id/textView224"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="العدد"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView226"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Summatin"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Methdes.MyTextView
                    android:id="@+id/textView227"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:gravity="left"
                    android:text="المبلغ"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>

</RelativeLayout>