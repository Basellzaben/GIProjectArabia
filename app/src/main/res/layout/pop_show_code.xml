<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <view
                    class="Methdes.MyTextView"
                    id="@+id/view15"
                    layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Footer_Menu"
                    android:gravity="center"
                    android:text="كود السقوفات"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/RR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <Methdes.MyTextView
                        android:id="@+id/OfferNm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/Main_Gray_Blure"

                        android:gravity="center"
                        android:text="الكود"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <Methdes.MyTextView
                        android:id="@+id/OfferNo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"

                        android:background="@color/Main_Gray_Blure"
                        android:gravity="center"
                        android:text="سقف البونص"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <Methdes.MyTextView
                        android:id="@+id/Desc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/Main_Gray_Blure"
                        android:gravity="center"
                        android:text="سقف الخصم"
                        android:textColor="#fff"
                        android:textIsSelectable="false"
                        android:textSize="18sp" />


                    <Methdes.MyTextView
                        android:id="@+id/OfferDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/Main_Gray_Blure"
                        android:gravity="center"
                        android:text="جميع مواد الفاتورة"
                        android:textColor="#fff"
                        android:textIsSelectable="false"
                        android:textSize="18sp" />


                    <Methdes.MyTextView
                        android:id="@+id/OffeيrDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/Main_Gray_Blure"
                        android:gravity="center"
                        android:text="ملاحظات"
                        android:textColor="#fff"
                        android:textIsSelectable="false"
                        android:textSize="18sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/Lst1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Pink"
            android:text="رجـــــوع"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>